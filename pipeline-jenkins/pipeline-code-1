pipeline {
    agent any
    tools {
        nodejs 'mynodeapp'
    }
    stages {
        stage('cloning-1') {
            steps {
                echo 'cloning from github'
                checkout scmGit(branches: [[name: '*/master']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/samarthfunde/simple-node-app-jenkins.git']])
                echo "cloned successfully...."
            }
        }
        stage('Build') {
            steps {
                echo 'this is building project'
                sh 'npm install'
                echo 'Build successfully...'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing project'
                sh './node_modules/mocha/bin/_mocha --exit ./test/test.js'
                echo "tested successfullly........."
            }
        }
        stage('Deploy') {
            steps {
                script{
                     echo 'Deploying myapp om live server'
                    sshagent(['ssh-credentials-for-live-server']) {
                      sh '''
                      ssh -o StrictHostKeyChecking=no ubuntu@172.31.1.23<<EOF
                       mkdir nodeapp1
                       cd nodeapp1
                    git init
                    git pull "https://github.com/samarthfunde/simple-node-app-jenkins.git" 
                    sudo apt update
                   sudo apt install nodejs npm -y
                    npm install
                    sudo npm install -g pm2
                    pm2 restart app.js || pm2 start app.js
                    exit
                    EOF
                    '''
            }
        }
    }
}
    }
}
